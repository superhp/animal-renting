<!-- The base template -->

@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
}
<!DOCTYPE html>
<html data-ng-app="myApp">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Umbraco.Field("pagetitle", altText: "AnimalRental")</title>

    <!-- Bootstrap core CSS -->
    <link href="http://bootswatch.com/united/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/jumbotron.css" rel="stylesheet">
    <link href="~/css/addition.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <!-- AngularJS -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-resource.js" type="text/javascript"></script>
    <!-- AngularJS for File Upload -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/1.6.1/FileAPI.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/1.6.1/angular-file-upload-html5-shim.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/1.6.1/angular-file-upload.min.js" type="text/javascript"></script>

    <!-- TO BE COMMENTED -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="http://m-e-conroy.github.io/angular-dialog-service/javascripts/dialogs.min.js" type="text/javascript"></script>

    <!-- Bootstrap UI -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.10.0/ui-bootstrap-tpls.min.js" type="text/javascript"></script>
</head>
<body>
    <!-- for checking if no refresh or freh request occured -->
    <input id="angularCheck" type="text" hidden="hidden" value="1" />

    @Html.Partial("Navigation", @Model.Content)

    <!-- /container -->
    <div class="container nice-container" data-ng-view> </div> 

    <footer class="text-center">
        <p>Copyright AnimalVolunteers &copy; 2014</p>
    </footer>

    <!-- Custom AngularJS configs and controllers -->
    <script src="/scripts/app/app.js" type="text/javascript"></script>
    <script src="/scripts/app/config.js" type="text/javascript"></script>
    <script src="/scripts/app/Controllers/animalPublishController.js" type="text/javascript"></script>
    <script src="/scripts/app/Controllers/animaleditcontroller.js" type="text/javascript"></script>
    <script src="/scripts/app/Controllers/carouselcontroller.js" type="text/javascript"></script>
    <script src="/scripts/app/Controllers/animaldetailscontroller.js" type="text/javascript"></script>
    <script src="/scripts/app/Controllers/animalgetcontroller.js" type="text/javascript"></script>
</body>
</html>